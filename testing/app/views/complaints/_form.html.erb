<%= form_for @complaint, :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, class: "form-control", required: 'required' %>
  </div>
  
  <div class="form-group">
    <%= f.label :content, "Complaint:" %>
    <%= f.text_area :content, class: "form-control", rows: "4", required: 'requried' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", class: "btn btn-default btn-primary center" %>  
  </div>
<% end %>