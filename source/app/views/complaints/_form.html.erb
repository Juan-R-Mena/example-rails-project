<%= form_for @complaint , :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :user_email, "Email address", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user_email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, "Complaint", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Create" , class: "btn btn-default"%>
      <%= link_to 'Cancel', complaints_path, {:class => "btn btn-primary"} %>
    </div>
  </div>
<% end %>
